{
  "manifest_version": 3,
  "name": "Price Tracker",
  "description": "Buy at the right place at the right time.",
  "version": "1.0",
  "host_permissions": ["https://api.pricetracker.fyi/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["styles.css"]
    }
  ]
}